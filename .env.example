# FO3 Wallet Core Environment Configuration

# Application Settings
RUST_LOG=info
GRPC_LISTEN_ADDR=0.0.0.0:50051
WEBSOCKET_LISTEN_ADDR=0.0.0.0:8080
METRICS_LISTEN_ADDR=0.0.0.0:9090

# TLS Configuration
ENABLE_TLS=false
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_CERT_PATH=./certs/ca.crt
CERT_DIR=./certs

# Authentication and Security
JWT_SECRET=your_jwt_secret_key_change_me_in_production
ENCRYPTION_KEY=your_32_byte_encryption_key_change_me

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENABLED=true
TRACE_SAMPLING_RATIO=0.1

# Blockchain RPC Configuration
# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_API_KEY
ETHEREUM_API_KEY=YOUR_INFURA_API_KEY

# Ethereum Testnet (optional)
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_API_KEY

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_API_KEY=

# Solana Devnet (optional)
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# Bitcoin
BITCOIN_RPC_URL=https://blockstream.info/api
BITCOIN_API_KEY=

# Bitcoin Testnet (optional)
BITCOIN_TESTNET_RPC_URL=https://blockstream.info/testnet/api

# Database Configuration
POSTGRES_PASSWORD=fo3_secure_password_change_me
DATABASE_URL=postgresql://fo3_user:fo3_secure_password_change_me@postgres:5432/fo3_wallet

# Redis Configuration
REDIS_PASSWORD=fo3_redis_password_change_me
REDIS_URL=redis://:fo3_redis_password_change_me@redis:6379

# Monitoring Configuration
GRAFANA_PASSWORD=admin_change_me

# Security Settings
JWT_SECRET=your_jwt_secret_key_change_me
ENCRYPTION_KEY=your_32_byte_encryption_key_change_me

# KYC Configuration
KYC_STORAGE_PATH=./data/kyc_documents
KYC_MAX_FILE_SIZE=10485760
KYC_ENCRYPTION_KEY=your_base64_encoded_32_byte_key_for_kyc_documents

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Feature Flags
ENABLE_SOLANA=true
ENABLE_BITCOIN=true
ENABLE_ETHEREUM=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Development Settings (set to false in production)
DEBUG_MODE=false
ENABLE_CORS=true
ALLOW_INSECURE_CONNECTIONS=false
